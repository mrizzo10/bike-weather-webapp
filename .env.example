# OpenWeatherMap API Key
# Get free at https://openweathermap.org/api
OPENWEATHER_API_KEY=your_api_key_here

# SendGrid (for sending emails)
# Sign up free at https://sendgrid.com
# Create an API key at: Settings > API Keys > Create API Key
SENDGRID_API_KEY=SG.your_api_key_here

# Email "from" address (must be verified in SendGrid)
EMAIL_FROM=noreply@yourdomain.com

# Flask settings
FLASK_SECRET_KEY=generate_a_random_string_here

# App URL (for unsubscribe links)
APP_URL=https://your-app.onrender.com

# Admin key for viewing subscribers
ADMIN_KEY=your_secret_admin_key
